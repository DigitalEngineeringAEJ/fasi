<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_gefaehrdungsbeurteilung">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                           <h1>
                                Gefährdungsbeurteilung 
                            </h1>
                        <table style="font-size:16px" class="table table-borderless table-sm mt16 ml16">
                          <tr>
                                <td>
                                    <strong>Arbeitsbereich: </strong>
                                </td>
                                <td>
                                    <span t-field="o.equipment_id.category_id"/>
                                </td>
                            </tr>
                             <t t-if="o.mail_activity_id.schedule_date is False">
                             <tr>
                                <td >
                                    <strong>Datum: </strong>
                                </td>
                                <td>
                                    <span t-field="o.date" t-options="{&quot;format&quot;: &quot;dd.MM.yyyy&quot;}"/>
                                </td>
                            </tr>
                            </t>
                            <t t-if="o.mail_activity_id.schedule_date is not False">
                             <tr>
                                <td >
                                    <strong>Datum: </strong>
                                </td>
                                <td>
                                    <span t-field="o.mail_activity_id.schedule_date" t-options="{&quot;format&quot;: &quot;dd.MM.yyyy&quot;}"/>
                                </td>
                            </tr>
                            </t>
                            <tr>
                                <td>
                                    <strong>Kunde: </strong>
                                </td>
                                <td>
                                    <span t-field="o.customer_id"/>,
                                    <t t-esc="o.customer_id.street"/>, <t t-esc="o.customer_id.street2"/> <t t-esc="o.customer_id.zip"/>, <t t-esc="o.customer_id.city"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Bearbeiter: </strong>
                                </td>
                                <td>
                                    <span t-field="o.contractor_id.partner_id"/>
                                    <t t-esc="o.contractor_id.partner_id.street"/>, <t t-esc="o.contractor_id.partner_id.street2"/> <t t-esc="o.contractor_id.partner_id.zip"/>, <t t-esc="o.contractor_id.partner_id.city"/>
                                </td>
                            </tr>
                         <table style="table-layout:fixed; font-size:12px" class="table table-bordered table-sm mt16 ml16">
                                <thead>Gefährdungen</thead>
                            <tr>
                            <th scope="col" width="35">Nr.</th>
                            <th scope="col">Gefährdungs-<br/>faktor<br/>Gruppe</th>
                            <th scope="col">Gefähr-<br/>dungsfaktor</th>
                            <th scope="col">Beschreibung</th>
                            <th scope="col">Eintritts-<br/>wahrschein-<br/>lichkeit</th>
                            <th scope="col">Ausmaß</th>
                            <th scope="col" width="60">Maßzahl</th>
                            <th scope="col" width="65">Risiko</th>
                            <th scope="col">Beschreibung/<br/>Risiko-<br/>minderung</th>
                            <th scope="col">Klassifizierung</th>
                          </tr>
                          <tr t-foreach="o.gefaehrdunsfaktor_ids" t-as="line">
                                 <td><span t-esc="line.nummer_gef"/></td>
                                 <td><span t-esc="line.gefahrenquellen_typ_id.name"/></td>
                                 <td><span t-esc="line.gefaehrdungsf_name.gefaehrdungsf"/></td>
                                 <td><span t-esc="line.gefahrenquellen_typ_beschreibung"/></td>
                                 <td><span t-esc="{False: False, 'status_w_1': 'sehr gering', 'status_w_2': 'gering','status_w_3':'mittel','status_w_4':'hoch'}[line.gef_beurteilung_w]"/></td>
                                 <td><span t-esc="{False: False, 'status_a_1': 'leichte Verletzugen oder Erkrankungen', 'status_a_2': 'mittelschwere Verletzungen oder Erkrankungen','status_a_3':'schwere Verletzungen oder Erkrankungen','status_a_4':'möglicher Tod, Katastrophe'}[line.gef_beurteilung_a]"/></td>
                                  <td><span t-esc="{False: False, 'status_e_0': '0', 'status_e_1': '1','status_e_2':'2','status_e_3':'3', 'status_e_4': '4','status_e_5':'5','status_e_6':'6', 'status_e_7':'7'}[line.gef_beurteilung_e]" force_save="1"/></td>
                                 <td><span t-esc="{False: False, 'status_r_0': '', 'status_r_1': 'gering','status_r_2':'signifikant','status_r_3':'hoch'}[line.gefahrenquellen_typ_risiko]" string="Risiko" attrs="{'invisible': [('gef_beurteilung_e', '=', False)]}"/></td>
                                  <td><span t-esc="{False: False, 'status_b_0': '', 'status_b_1': 'Risiko akzeptabel','status_b_2':'Reduzierung des Risikos notwendig','status_b_3':'Risiko-\nreduzierung dringend erforderlich'}[line.gefahrenquellen_typ_beschreibung_risikominderung]"/></td>
                                 <td><span t-esc="line.klasse_gef"/></td>
                            </tr>
                        </table>
                         <table style="table-layout:fixed; font-size:12px" class="table table-bordered table-sm mt16 ml16">
                                <thead>Gefährdungen</thead>
                            <tr>
                            <th scope="col" width="35">Nr.</th>
                            <th scope="col">Abstellmaßnahme</th>
                            <th scope="col">Abstellmaßnahmen<br/>Klassifizierung</th>
                            <th scope="col">Deadline<br/>Abstellmaßnahme</th>
                            <th scope="col">Verantwortlich</th>
                            <th scope="col">Folgebegehung<br/>erforderlich?</th>
                          </tr>
                          <tr t-foreach="o.gefaehrdunsfaktor_ids" t-as="line">
                                 <td><span t-esc="line.nummer_gef"/></td>
                                 <td><span t-esc="line.abs_gef"/></td>
                                 <td><span t-esc="line.abstellmassnahme_gef_kla"/></td>
                                 <td><span t-esc="line.deadline_abs_gef.strftime('%d.%m.%Y')"/></td>
                                 <td><span t-esc="line.customer_id.name"/></td>
                                 <td><span t-esc="line.folg_beg_gef"/></td>
                            </tr>
                        </table>   
                             <p style="page-break-before:always;"></p>
                            <tr>
                          <div>
                                <td>
                                   <strong>Bemerkung : </strong>
                                   <span t-field="o.note_rel"/>
                                </td>
                              </div>
                            <table style="table-layout:fixed; font-size:20px" class="table table-borderless table-sm mt16 ml16">
                                <thead></thead>
                            <tr>
                            <th scope="col"><br/><br/><br/><span t-field="o.date" t-options="{&quot;format&quot;: &quot;dd.MM.yyyy&quot;}"/></th>
                            <th scope="col"><img t-if="o.signature" style="max-height:4cm; max-width:9cm;" t-att-src="image_data_uri(o.signature)" alt="sign"/></th>
                          </tr>
                          <tr t-as="line">
                                 <td scope="col"><p style="border-top:1px solid grey; width:300px;"/>Datum</td>
                                  <td scope="col"><p style="border-top:1px solid grey; width:300px;"/>Signatur Bearbeiter</td>
                            </tr>
                        </table>
                           </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="gefaehrdungsbeurteilungs_protocol" model="ir.actions.report">
            <field name="name">Gefährdungsbeurteilung</field>
            <field name="model">equipment.protocol</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">wepelo_equipment.report_gefaehrdungsbeurteilung</field>
            <field name="report_file">wepelo_equipment.report_gefaehrdungsbeurteilung</field>
            <field name="print_report_name">(object._get_report_filename())</field>
            <field name="binding_model_id" ref="model_equipment_protocol"/>
            <field name="paperformat_id" ref="wepelo_equipment.paperformat_begehung"/>
            <field name="binding_type">report</field>
        </record>

</odoo>