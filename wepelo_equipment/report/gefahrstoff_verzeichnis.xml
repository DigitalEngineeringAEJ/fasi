<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_gef_verzeichnis_protocol">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                            <h1>
                                Arbeitsstoff-  und Gefahrstoff-Verzeichnis (§6 GefStoffV) 
                            </h1>
                             <div class="col-12">
                                 <div class="col-9  pull-left">
                        <tr>
                            <td>
                                <strong>Betrieb/Anschrift:<br/> </strong>
                            </td>
                                <td>
                            <span t-field="o.customer_id"/>,<br/>
                            <t t-esc="o.customer_id.street"/>,<br/> <t t-esc="o.customer_id.street2"/> <t t-esc="o.customer_id.zip"/>, <t t-esc="o.customer_id.city"/><br/>
                                </td>
                            </tr>
                            </div>
                                 <div class="col-3 pull-right">
                             <t t-if="o.mail_activity_id.schedule_date is False">
                             <tr>
                                <td>
                                    <strong>erstellt am: </strong>
                                </td>
                                <td>
                                    <span t-field="o.date" t-options="{&quot;format&quot;: &quot;dd.MM.yyyy&quot;}"/><br/>
                                </td>
                            </tr>
                            </t>
                            <t t-if="o.mail_activity_id.schedule_date is not False">
                             <tr >
                                <td >
                                    <strong>erstellt am: </strong>
                                </td>
                                <td>
                                    <span t-field="o.mail_activity_id.schedule_date" t-options="{&quot;format&quot;: &quot;dd.MM.yyyy&quot;}"/><br/>
                                </td>
                            </tr>
                            </t>
                        <tr>
                                <td>
                                    <strong>Erstellt von: </strong>
                                </td>
                                <td>
                                    <span t-field="o.contractor_id.partner_id"/><br/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Kontakt: </strong>
                                </td>
                                <td>
                                    <string>Tel.</string><span t-field="o.contractor_id.phone"/><br/>
                                    <t t-esc="o.contractor_id.partner_id.email"/>
                                </td>
                            </tr>
                            </div>
                        </div> 
                         <table style="table-layout:fixed; font-size:12px" class="table table-bordered table-sm mt16 ml16">
                                <thead/>
                            <tr>
                            <th scope="col">Arbeitsbereich</th>
                            <th scope="col">Stoff-/Produkt-bezeichnung (Handelsname, Produkt-Nr.)</th>
                            <th scope="col">Hersteller/ Lieferant</th>
                            <th scope="col">Einstufung, gefährliche Eigenschaften</th>
                            <th scope="col">Verwendungszweck/ Arbeitsverfahren</th>
                            <th scope="col">Im Betrieb verwendete Mengenberei-che pro Jahr (l, kg, t)</th>
                            <th scope="col">Verwendungs-<br/>zeitraum<br/>(seit)</th>
                            <th scope="col">Sicherheitsda-<br/>tenblatt vom</th>
                          </tr>
                          <tr t-foreach="o.gef_verzeichnis_ids" t-as="line">
                                 <td><span t-esc="line.name"/></td>
                                 <td><span t-esc="line.prod_bez"/></td>
                                 <td><span t-esc="line.partner_id.name"/></td>
                                 <td><span t-esc="line.kategorie"/></td>
                                 <td><span t-esc="line.zweck"/></td>
                                  <td><span t-esc="line.menge"/></td>
                                 <td><span t-esc="line.zeitraum"/></td>
                                  <td><span t-esc="line.daten_blatt"/></td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="paperformat_gef" model="report.paperformat">
    <field name="name">Format für Gef</field>
    <field name="default" eval="False"/>
    <field name="format">A4</field>
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Landscape</field>
    <field name="margin_top">37.5</field>
    <field name="margin_bottom">30</field>
    <field name="margin_left">7</field>
    <field name="margin_right">7</field>
    <field name="header_line" eval="False" />
    <field name="header_spacing">35</field>
    <field name="dpi">90</field>
    </record>
    
    <record id="wepelo_equipment_gef_verzeichnis_protocol" model="ir.actions.report">
            <field name="name">Arbeitsstoff- und Gefahrstoff-Verzeichnis</field>
            <field name="model">equipment.protocol</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">wepelo_equipment.report_gef_verzeichnis_protocol</field>
            <field name="report_file">wepelo_equipment.report_gef_verzeichnis_protocol</field>
            <field name="print_report_name">(object._get_report_filename())</field>
            <field name="binding_model_id" ref="model_equipment_protocol"/>
            <field name="paperformat_id" ref="wepelo_equipment.paperformat_gef"/>
            <field name="binding_type">report</field>
        </record>
    
</odoo>