<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_folgebegehung">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="col-12">
                           <h1>
                                Folgebegehungsprotokoll 
                            </h1>
                        </div>
                        <table class="table table-borderless table-sm mt16 ml16">
                          <tr>
                                <td style="width:200px;">
                                    <strong>Arbeitsbereich: </strong>
                                </td>
                                <td>
                                    <h5><span t-field="o.equipment_id.category_id"/></h5>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:200px;">
                                    <strong>Datum: </strong>
                                </td>
                                <td>
                                    <h5><span t-field="o.mail_activity_id.schedule_date" t-options="{&quot;format&quot;: &quot;dd.MM.yyyy&quot;}"/></h5>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:200px;">
                                    <strong>Kunde: </strong>
                                </td>
                                <td>
                                    <h5><span t-field="o.customer_id"/></h5>
                                    <t t-esc="o.customer_id.street"/>, <t t-esc="o.customer_id.street2"/> <t t-esc="o.customer_id.zip"/>, <t t-esc="o.customer_id.city"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:200px;">
                                    <strong>Contractor: </strong>
                                </td>
                                <td>
                                    <h5><span t-field="o.contractor_id.partner_id"/></h5>
                                    <t t-esc="o.contractor_id.partner_id.street"/>, <t t-esc="o.contractor_id.partner_id.street2"/> <t t-esc="o.contractor_id.partner_id.zip"/>, <t t-esc="o.contractor_id.partner_id.city"/>
                                </td>
                            </tr>
                        <td style="width:200px; style=color: black;">
                              <div style="color: black;"><strong style="color: black;"><caption style="color: black;">3. Kontrolle der Wirksamkeit:</caption> </strong></div>
                            </td>
                            <table class="table table-bordered table-sm mt16 ml16">
                            <tr>
                            <th scope="col">Nr. </th>
                            <th scope="col">Name </th>
                            <th scope="col">Klassifizierung </th>
                            <th scope="col">Abstellmaßnahme </th>
                            <th scope="col">Abstellmaßnahme Klassifizierung</th>
                            <th scope="col">Deadline Abstellmaßnahme</th>
                            <th scope="col">Verantwortlich</th>
                            <th scope="col">Maßnahme wirksam?</th>
                            <th scope="col">Folgebegehung erforderlich</th>
                          </tr>
                          <tr t-foreach="o.folg_beg_ids" t-as="line">
                                 <td><span t-esc="line.nummer_vier"/></td>
                                  <td><span t-esc="line.name_vier"/></td>
                                 <td><span t-esc="line.klasse_drei"/></td>
                                 <td><span t-esc="line.abstellmassnahme_drei"/></td>
                                 <td><span t-esc="line.abstellmassnahme_k_drei"/></td>
                                 <td><span t-esc="line.deadline_abs_ref"/></td>
                                 <td><span t-esc="line.verantwortlich_ref"/></td>
                                 <td><span t-esc="line.wirksam"/></td>
                                 <td><span t-esc="line.w_folg_erf"/></td>
                            </tr>
                        </table>
                            <tr>
                          <div>
                                <td style="width:200px;">
                                   <strong>Bemerkung : </strong>
                                   <span t-field="o.note_rel"/>
                                </td>
                              </div>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="Folgebegehungs_protocol" model="ir.actions.report">
            <field name="name">Folgebegehung</field>
            <field name="model">equipment.protocol</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">wepelo_equipment.report_folgebegehung</field>
            <field name="report_file">wepelo_equipment.report_folgebegehung</field>
            <field name="print_report_name">(object._get_report_filename())</field>
            <field name="binding_model_id" ref="model_equipment_protocol"/>
            <field name="binding_type">report</field>
        </record>

</odoo>