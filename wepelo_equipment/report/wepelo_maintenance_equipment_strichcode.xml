<?xml version="1.0" encoding="utf-8"?>
<odoo>


<template id="wepelo_maintenance_equipment_strichcode">
    <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
              <t t-call="web.internal_layout">
                <div class="page">
                    <div class="col-12">
                      <h4>
                       <span t-field="o.name"/>
                      </h4>
                    <td class="text-center">
                     <center style="margin:6px 0;">
                         <img t-attf-src="data:image/jpg;base64,{{ o.qr_code }}" style="align:left; width:100px;height:100px;"/>
                     </center>
                      </td>
                  </div>
               </div>   
            </t>  
          </t>
       </t>     
 
    
</template>

<report
    id="equipment_strichcode"
    model="maintenance.equipment"
    string="Strichcode"
    report_type="qweb-pdf"
    name="wepelo_equipment.wepelo_maintenance_equipment_strichcode"
    file="wepelo_equipment.wepelo_maintenance_equipment_strichcode"
    groups="base.group_system,base.group_user"
    print_report_name="((object.name or '').replace('/','')+'.pdf')"
/>

</odoo>