<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_equipment_eichnachweis_protocol">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                           <h1>
                                Begehung 
                            </h1>
                        <table style="font-size:16px" class="table table-borderless table-sm mt16 ml16">
                          <tr>
                                <td >
                                    <strong>Arbeitsbereich: </strong>
                                </td>
                                <td>
                                    <span t-field="o.equipment_id.category_id"/>
                                </td>
                            </tr>
                            <t t-if="o.mail_activity_id.schedule_date is False">
                             <tr>
                                <td >
                                    <strong>Datum: </strong>
                                </td>
                                <td>
                                    <span t-field="o.date" t-options="{&quot;format&quot;: &quot;dd.MM.yyyy&quot;}"/>
                                </td>
                            </tr>
                            </t>
                            <t t-if="o.mail_activity_id.schedule_date is not False">
                             <tr>
                                <td >
                                    <strong>Datum: </strong>
                                </td>
                                <td>
                                    <span t-field="o.mail_activity_id.schedule_date" t-options="{&quot;format&quot;: &quot;dd.MM.yyyy&quot;}"/>
                                </td>
                            </tr>
                            </t>
                            <tr>
                                <td >
                                    <strong>Kunde: </strong>
                                </td>
                                <td>
                                    <span t-field="o.customer_id"/>,
                                    <t t-esc="o.customer_id.street"/>, <t t-esc="o.customer_id.street2"/> <t t-esc="o.customer_id.zip"/>, <t t-esc="o.customer_id.city"/>
                                </td>
                            </tr>
                            <tr>
                                <td >
                                    <strong>Bearbeiter: </strong>
                                </td>
                                <td>
                                    <span t-field="o.contractor_id.partner_id"/>
                                    <t t-esc="o.contractor_id.partner_id.street"/>, <t t-esc="o.contractor_id.partner_id.street2"/> <t t-esc="o.contractor_id.partner_id.zip"/>, <t t-esc="o.contractor_id.partner_id.city"/>
                                </td>
                            </tr>
                            <table style="table-layout:fixed; font-size:10px" class="table table-bordered table-sm mt16 ml16">
                                <thead>1. Festgestellte Mängel, die gleich behoben werden konnten: </thead>
                            <tr>
                            <th scope="col">Nr. </th>
                            <th scope="col">Name </th>
                            <th scope="col">Klassifizierung </th>
                            <th scope="col">Abstellmaßnahme </th>
                            <th scope="col">Abstellmaßnahme Klassifizierung</th>
                          </tr>
                          <tr t-foreach="o.begehung_id_feld" t-as="line">
                                 <td><span t-esc="line.nummer_eins"/></td>
                                  <td><span t-esc="line.name_eins"/></td>
                                 <td><span t-esc="line.klasse"/></td>
                                 <td><span t-esc="line.abstellmassnahme"/></td>
                                 <td><span t-esc="line.abstellmassnahme_k"/></td>
                            </tr>
                        </table>
                            <table style="table-layout:fixed; font-size:10px" class="table table-bordered table-sm mt16 ml16">
                                <thead>2. Mängel, die nicht sofort behoben werden können: </thead>
                            <tr>
                            <th scope="col">Nr.</th>
                            <th scope="col">Name</th>
                            <th scope="col">Klassifizierung </th>
                            <th scope="col">Abstellmaßnahme</th>
                            <th scope="col">Abstellmaßnahme Klassifizierung</th>
                            <th scope="col">Deadline Abstellmaßnahme</th>
                            <th scope="col">Verantworlicher:</th>
                            <th scope="col">Folgebegehung erforderlich? :</th>
                          </tr>
                          <tr t-foreach="o.begehung_id_feld_zwei" t-as="line">
                                 <td><span t-esc="line.nummer_drei"/></td>
                                 <td><span t-esc="line.name_zwei"/></td>
                                 <td><span t-esc="line.klasse_zwei"/></td>
                                 <td><span t-esc="line.abstellmassnahme_zwei"/></td>
                                 <td><span t-esc="line.abstellmassnahme_k_zwei"/></td>
                                 <td><span t-esc="line.deadline_abs.strftime('%d.%m.%Y')"/></td>
                                 <td><span t-esc="line.verantwortlich.name"/></td>
                                 <td><span t-esc="line.folg_erf_m"/></td>
                            </tr>
                        </table>
                            <p style="page-break-before:always;"></p>
                            <tr>
                          <div>
                                <td >
                                   <strong>Bemerkung : </strong>
                                   <span t-field="o.note_rel"/>
                                </td>
                              </div>
                                <table style="table-layout:fixed; font-size:20px" class="table table-borderless table-sm mt16 ml16">
                                <thead></thead>
                                <tr>
                                <th scope="col"><br/><br/><br/><span t-field="o.date" t-options="{&quot;format&quot;: &quot;dd.MM.yyyy&quot;}"/></th>
                                <th scope="col"><img t-if="o.signature" style="max-height:4cm; max-width:9cm;" t-att-src="image_data_uri(o.signature)" alt="sign"/></th>
                              </tr>
                              <tr t-as="line">
                                     <td scope="col"><p style="border-top:1px solid grey; width:300px;"/>Datum</td>
                                      <td scope="col"><p style="border-top:1px solid grey; width:300px;"/>Signatur Bearbeiter</td>
                                </tr>
                        </table>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="paperformat_begehung" model="report.paperformat">
    <field name="name">Format für Begehung</field>
    <field name="default" eval="False"/>
    <field name="format">A4</field>
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">37.5</field>
    <field name="margin_bottom">30</field>
    <field name="margin_left">7</field>
    <field name="margin_right">7</field>
    <field name="header_line" eval="True" />
    <field name="header_spacing">35</field>
    <field name="dpi">90</field>
    </record>
    
    
    <record id="safety_master_eichnachweis_protocol" model="ir.actions.report">
            <field name="name">Begehung</field>
            <field name="model">hazard.protocol</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">safety_master.report_equipment_eichnachweis_protocol</field>
            <field name="report_file">safety_master.report_equipment_eichnachweis_protocol</field>
            <field name="print_report_name">(object._get_report_filename())</field>
            <field name="binding_model_id" ref="model_equipment_protocol"/>
            <field name="paperformat_id" ref="safety_master.paperformat_begehung"/>
            <field name="binding_type">report</field>
        </record>
    
</odoo>