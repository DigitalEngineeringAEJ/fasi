<?xml version="1.0" encoding="utf-8"?>
<odoo>


<template id="hazard_qr_code">
    <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
              <t t-call="web.internal_layout">
                <div class="page">
                    <div class="col-12">
                      <h4>
                       <span t-field="o.name"/>
                      </h4>
                    <td class="text-center">
                     <center style="margin:6px 0;">
                         <img t-attf-src="data:image/jpg;base64,{{ o.qr_code }}" style="align:left; width:100px;height:100px;"/>
                     </center>
                      </td>
                  </div>
               </div>   
            </t>  
          </t>
       </t>     
 
    
</template>

<record id="hazard_qr_code" model="ir.actions.report">
            <field name="name">QR Code</field>
            <field name="model">safety.master</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">safety_master.hazard_qr_code</field>
            <field name="report_file">wepelo_equipment.hazard_qr_code</field>
            <field name="print_report_name">((object.name or '').replace('/','')+'.pdf')</field>
            <field name="binding_model_id" ref="model_safety_master"/>
            <field name="binding_type">report</field>
        </record>

</odoo>